<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
	<title><%= "CRdata.org" %></title>
	<%= tag(:meta, :name => 'description', :content => '') %>
	<%= tag(:meta, :name => 'keywords', :content => '') %>
	<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
	<%= stylesheet_link_tag('style', 'data_table') %>
	<%= stylesheet_link_tag('controls/advanced.css') %>
	<%= stylesheet_link_tag('buttons/advanced.css') %>
        <%= stylesheet_link_tag('slush_poppies.css') %>

	<%= javascript_include_tag(:defaults) %>
	<%= yield :head %>
</head>
<body class="<%= "#{controller_name}" %>" id="<%= "#{controller_name}-#{params[:action]}" %>">
	<% content_tag(:div, :class => 'container', :id => "custom_layout") do %>
		<%= render(:partial => 'shared/header', :use_full_path => true) %>
		<div id="featured"><div class="inside">
			<%= render(:partial => 'shared/notifications', :use_full_path => true) %>
			<%= yield :intro %>
		</div></div>
		
		<% content_tag(:div, :id => 'page') do %><% content_tag(:div, :class => 'inside') do  %>
			<% content_tag(:div, :class => 'content') do %>
				<%= yield :content %>
			<% end %>
			
			<%= render(:partial => 'shared/sidebar', :use_full_path => true) %>
			<%= clear %>
		<% end %><% end #page %>
	
		<%= render(:partial => 'shared/footer', :use_full_path => true) %>
	<% end #container %>
        <%= render(:partial => "shared/analytics") %>
</body>
</html>
